generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(cuid())
  clerkId              String    @unique
  email                String    @unique
  role                 Role      @default(FREE)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  isDeleted            Boolean   @default(false)
  deletedAt            DateTime?
  googleId             String?   @unique
  stripeCustomerId     String?   @unique
  stripeSubscriptionId String?   @unique
  flights              Flight[]
  ownedServer          Server?   @relation("ServerOwner")
}

model Flight {
  id           String    @id @default(cuid())
  userId       String
  callsign     String
  aircraftType String
  depICAO      String?
  arrICAO      String?
  squawk       String?
  duration     Int?
  landingRate  Float?
  maxAltitude  Int?
  maxSpeed     Int?
  routeData    Json?
  startTime    DateTime  @default(now())
  endTime      DateTime?
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Server {
  id         String   @id @default(cuid())
  name       String
  inviteCode String   @unique @default(nanoid(8))
  ownerId    String   @unique
  createdAt  DateTime @default(now())
  owner      User     @relation("ServerOwner", fields: [ownerId], references: [id], onDelete: Cascade)
}

enum Role {
  FREE
  PRO
}

model AircraftImage {
  id           String    @id @default(cuid())
  airlineIata  String    // e.g., "EK", "BA", "AA"
  aircraftType String    // e.g., "A350", "B777", "A320"
  imageUrl     String
  imageKey     String?   // UploadThing file key for deletion
  photographer String?

  // Approval workflow
  isApproved   Boolean   @default(false)
  uploadedBy   String    // Clerk user ID of uploader
  approvedBy   String?   // Clerk user ID of approver (PRO user)
  approvedAt   DateTime?

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([airlineIata, aircraftType, isApproved])
  @@index([airlineIata])
  @@index([aircraftType])
  @@index([isApproved])
  @@index([uploadedBy])
}
